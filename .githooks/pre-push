#!/bin/bash

# Pre-push hook for TDD enforcement
# Full test suite + coverage gate

set -e

echo "ðŸš€ Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Coverage threshold
MIN_COVERAGE=80

# Function to print status
print_status() {
    if [ $1 -eq 0 ]; then
        echo -e "${GREEN}âœ“ $2${NC}"
    else
        echo -e "${RED}âœ— $2${NC}"
        exit 1
    fi
}

# 1. Run all tests
echo ""
echo "ðŸ§ª Running all tests..."
if ./gradlew test --quiet; then
    print_status 0 "All tests passed"
else
    print_status 1 "Tests failed"
fi

# 2. Generate coverage report
echo ""
echo "ðŸ“Š Generating coverage report..."
./gradlew jacocoTestReport --quiet 2>/dev/null || true

# 3. Check coverage threshold
COVERAGE_FILE="build/reports/jacoco/test/jacocoTestReport.xml"
if [ -f "$COVERAGE_FILE" ]; then
    # Extract line coverage from JaCoCo XML (POSIX-compatible, works on macOS and Linux)
    MISSED=$(grep 'type="LINE"' "$COVERAGE_FILE" | head -1 | sed -E 's/.*missed="([0-9]+)".*/\1/' || echo "0")
    COVERED=$(grep 'type="LINE"' "$COVERAGE_FILE" | head -1 | sed -E 's/.*covered="([0-9]+)".*/\1/' || echo "0")

    if [ "$MISSED" != "0" ] || [ "$COVERED" != "0" ]; then
        TOTAL=$((MISSED + COVERED))
        if [ "$TOTAL" -gt 0 ]; then
            COVERAGE=$((COVERED * 100 / TOTAL))

            echo ""
            echo "ðŸ“ˆ Line Coverage: ${COVERAGE}% (minimum: ${MIN_COVERAGE}%)"

            if [ "$COVERAGE" -lt "$MIN_COVERAGE" ]; then
                echo -e "${RED}âœ— Coverage ${COVERAGE}% is below minimum ${MIN_COVERAGE}%${NC}"
                echo ""
                echo "Please add more tests before pushing."
                echo "Run './gradlew jacocoTestReport' and check build/reports/jacoco/test/html/index.html"
                exit 1
            else
                print_status 0 "Coverage threshold met"
            fi
        fi
    else
        echo -e "${YELLOW}âš  Could not parse coverage report${NC}"
    fi
else
    echo -e "${YELLOW}âš  Coverage report not found, skipping coverage check${NC}"
    echo "  Run './gradlew jacocoTestReport' to generate the report"
fi

# 4. Check for skipped tests
echo ""
echo "ðŸ” Checking for skipped tests..."
SKIPPED_TESTS=$(find . -path ./build -prune -o -name "*.kt" -print | xargs grep -l "@Disabled\|@Ignore" 2>/dev/null || true)
if [ -n "$SKIPPED_TESTS" ]; then
    echo -e "${YELLOW}âš  Found skipped tests (not blocking):${NC}"
    echo "$SKIPPED_TESTS"
else
    echo -e "${GREEN}âœ“ No skipped tests found${NC}"
fi

echo ""
echo -e "${GREEN}âœ… Pre-push checks passed! Ready to push.${NC}"
echo ""
